---
import type { CollectionEntry } from "astro:content";

interface Props {
  posts: CollectionEntry<"posts">[];
}

const { posts } = Astro.props;
---

<ul class="space-y-6">
  {posts.map((post) => (
    <li class="group border border-neutral-300 dark:border-neutral-700 rounded-lg p-6 hover:shadow-md hover:border-neutral-400 dark:hover:border-neutral-600">
      <a href={`/posts/${post.slug}/`} class="block">
        <article class="space-y-2">
          <h1 class="text-2xl font-semibold decoration-2 group-hover:underline">
            {post.data.title}
          </h1>
          <div class="flex justify-between items-center">
            <time class="text-sm text-gray-500 dark:text-gray-400">
              {new Date(post.data.pubDate).toLocaleDateString()}
            </time>
          </div>
          <p class="text-gray-600 dark:text-gray-300">
            {post.data.description}
          </p>
          <div class="flex flex-wrap gap-2 text-sm text-gray-500 dark:text-gray-400">
            {post.data.tags.map((tag) => (
              <span class="bg-neutral-200 dark:bg-neutral-700 px-2 py-1 rounded">
                {tag}
              </span>
            ))}
          </div>
        </article>
      </a>
    </li>
  ))}
</ul>
