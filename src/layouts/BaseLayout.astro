---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from "astro:transitions";

const {pageTitle, customBodyStyle} = Astro.props;
---

<html lang="en" transition:animate="none">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link slot="head" rel="preconnect" href="https://fonts.googleapis.com">
		<link slot="head" rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
		<slot name="head" />
		<title>{pageTitle}</title>
		<ViewTransitions />
	</head>
	<body class:list={["bg-neutral-100 text-gray-900 dark:bg-neutral-800 dark:text-white mx-auto w-full max-w-3xl p-4 leading-relaxed", customBodyStyle]} style="font-family: 'Roboto Slab';"></body>
		<Header transition:persist/>
		<slot />
		<Footer transition:persist/>
	</body>
</html>
